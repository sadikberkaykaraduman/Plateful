@model UpdateOrderDetailDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Order Detail Process</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Order Detail</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="OrderDetailId" />
                            <div class="form-group">
                                <label for="categoryname">Product</label>
                                @Html.DropDownListFor(m => m.OrderDetailProductId, (List<SelectListItem>)ViewBag.ProductValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Piece</label>
                                <input type="text" class="form-control" asp-for="OrderDetailPiece">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Unit Price</label>
                                <input type="text" class="form-control" asp-for="OrderDetailUnitPrice">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Total Price</label>
                                <input type="text" class="form-control" asp-for="OrderDetailTotalPrice">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">OrderId</label>
                                <input type="text" class="form-control" asp-for="OrderDetailOrderId">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update Order Detail</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>