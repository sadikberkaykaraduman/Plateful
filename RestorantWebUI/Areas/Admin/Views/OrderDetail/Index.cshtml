@model List<ResultOrderDetailWithProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Order List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can view, edit, delete or add new order from here.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Product</th>
									<th scope="col">Piece</th>
									<th scope="col">Unit Price</th>
									<th scope="col">Total Price</th>
									<th scope="col">Order Id</th>
									<th scope="col">Operations</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.OrderDetailId</td>
										<td>@item.OrderDetailProductName</td>
										<td>@item.OrderDetailPiece</td>
										<td>@item.OrderDetailUnitPrice</td>
										<td>@item.OrderDetailTotalPrice</td>
										<td>@item.OrderDetailOrderId</td>
										<td>
											<a href="/Admin/OrderDetail/Update/@item.OrderDetailId" class="btn btn-outline-warning">Update</a>
											<a href="/Admin/OrderDetail/Delete/@item.OrderDetailId" class="btn btn-outline-danger">Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<br />
						<a href="/Admin/OrderDetail/Create" class="btn btn-outline-info">Add Order</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



