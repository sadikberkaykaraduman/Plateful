@model UpdateNotificationDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Notification Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-sub">
                            <div class="card-title">Update Notification</div>
                        </div>
                    </div>
                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Title</label>
                                <input type="text" class="form-control" asp-for="@Model.NotificationType">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Status</label>
                                <input type="text" class="form-control" asp-for="@Model.NotificationStatus">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Description</label>
                                <textarea class="form-control" asp-for="@Model.NotificationDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update Notification</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>