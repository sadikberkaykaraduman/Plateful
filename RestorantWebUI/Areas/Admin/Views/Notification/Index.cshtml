@model List<ResultNotificationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Notification List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can view, edit, delete or add new notification from here.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Type</th>
									<th scope="col">Date</th>
									<th scope="col">Status</th>
									<th scope="col">Operations</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NotificationId</td>
										<td>@item.NotificationType</td>
										<td>@item.NotificationDate.ToString("dd/MM/yyyy")</td>
										<td>@item.NotificationStatus</td>
										<td>
											<a href="/Admin/Notification/Update/@item.NotificationId" class="btn btn-outline-warning">Update</a>
											<a href="/Admin/Notification/Delete/@item.NotificationId" class="btn btn-outline-danger">Delete</a>
											<a href="/Admin/Notification/Details/@item.NotificationId" class="btn btn-outline-dark">Details</a>
											<a href="/Admin/Notification/Read/@item.NotificationId" class="btn btn-outline-dark">Read</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<br />
						<a href="/Admin/Notification/Create" class="btn btn-outline-info">Add Notification</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>





