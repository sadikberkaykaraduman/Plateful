@model ResultNotificationDto
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Notification Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-sub">
                            <div class="card-title">Notification Details</div>
                        </div>
                    </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="@Model.NotificationId" />
                            <div class="form-group">
                                <label for="categoryname">Title</label>
                                <input type="text" class="form-control" value="@Model.NotificationType">
                            </div>
                        <div class="form-group">
                            <label for="categoryname">Status</label>
                            <input type="text" class="form-control" value="@Model.NotificationDate.ToShortDateString()">
                        </div>
                            <div class="form-group">
                                <label for="categoryname">Status</label>
                            <input type="text" class="form-control" value="@Model.NotificationStatus">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Description</label>
                            <textarea class="form-control">@Model.NotificationDescription</textarea>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
