@model UpdateOrderDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Order Process</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Order</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="OrderId">
                            <div class="form-group">
                                <label for="categoryname">Table Number</label>
                                <input type="text" class="form-control" asp-for="OrderTableNumber">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Date</label>
                                <input type="datetime-local" class="form-control" asp-for="OrderDate">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Total Price</label>
                                <input type="text" class="form-control" asp-for="OrderTotalPrice">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Status</label>
                                <input type="text" class="form-control" asp-for="OrderStatus">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Description</label>
                                <textarea class="form-control" asp-for="OrderDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update Order</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
