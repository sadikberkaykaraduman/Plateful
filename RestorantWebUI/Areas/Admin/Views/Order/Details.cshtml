@model ResultOrderDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Details</h1>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Order Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Order Details</div>
                    </div>
                    <div class="card-body">
                        <input type="hidden" value="@Model.OrderId">
                        <div class="form-group">
                            <label for="categoryname">Table Number</label>
                            <input type="text" class="form-control" value="@Model.OrderTableNumber">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Date</label>
                            <input type="text" class="form-control" value="@Model.OrderDate.ToString("dd/MM/yyyy")">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Total Price</label>
                            <input type="text" class="form-control" value="@Model.OrderTotalPrice">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Status</label>
                            <input type="text" class="form-control" value="@Model.OrderStatus">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Description</label>
                            <textarea class="form-control">@Model.OrderDescription</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>