@model RegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Restorant Admin Registration</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="https://i.pinimg.com/736x/de/46/ef/de46ef982efb3131b4dee36516e74764.jpg" alt="form" style="width:600px; height:700px">
			</div>
			<form class="form-detail" method="post">
				<h2>New user Registration</h2>
				<div class="form-row">
					<input type="text" asp-for="Name" class="input-text" placeholder="Name" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="Surname" class="input-text" placeholder="Surname" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="Username" class="input-text" placeholder="Username" required>
				</div>
				<div class="form-row">
					<input type="text" asp-for="Mail" class="input-text" placeholder="E-mail" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>
				<div class="form-row">
					<input type="password" class="input-text" placeholder="Password" asp-for="Password" required>
				</div>
				<button class="btn btn-outline-dark">Register</button>
			</form>
		</div>
	</div>
</body>
</html>
