@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">About Page</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-sub">
                            You can view, edit, delete or add new abouts from here.
                        </div>
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="card-body">
                            <input type="hidden" asp-for="@item.AboutId" />
                            <div class="form-group">
                                <label for="categoryname">Title</label>
                                <input type="text" class="form-control" value="@item.AboutTitle">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Image Url</label>
                                <input type="text" class="form-control" value="@item.AboutImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Description</label>
                                <textarea class="form-control">@item.AboutDescription</textarea>
                            </div>
                            <a href="/Admin/About/Update/@item.AboutId" class="btn btn-outline-warning">Update</a>
                            <a href="/Admin/About/Delete/@item.AboutId" class="btn btn-outline-danger">Delete</a>

                        </div>
                    }
                    <div class="card-action">
                        <a href="/Admin/Category/Create" class="btn btn-outline-info">Add Category</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



