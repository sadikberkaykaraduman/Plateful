@model UpdateAboutDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">About Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-sub">
                            <div class="card-title">Update About</div>
                        </div>
                    </div>
                    <form method="post">
                        <div class="card-body">
                            <input type="hidden" asp-for="@Model.AboutId" />
                            <div class="form-group">
                                <label for="categoryname">Title</label>
                                <input type="text" class="form-control" asp-for="@Model.AboutTitle">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Image Url</label>
                                <input type="text" class="form-control" asp-for="AboutImageUrl" ">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Description</label>
                                <textarea class="form-control" asp-for="@Model.AboutDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







