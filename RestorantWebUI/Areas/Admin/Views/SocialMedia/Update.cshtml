@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Social Media Process</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Social Media</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="SocialMediaId" />
                            <div class="form-group">
                                <label for="categoryname">Title</label>
                                <input type="text" class="form-control" asp-for="SocialMediaTitle">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Url</label>
                                <input type="text" class="form-control" asp-for="SocialMediaUrl">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Icon</label>
                                <input type="text" class="form-control" asp-for="SocialMediaIcon">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update Social Media</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
