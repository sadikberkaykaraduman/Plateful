@model ResultProductWithCategoryByProductId

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Product Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Product Details</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="categoryname">Name</label>
                            <input type="text" class="form-control" value="@Model.ProductName">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Category</label>
                            <input type="text" class="form-control" value="@Model.ProductCategoryName">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Price</label>
                            <input type="text" class="form-control" value="@Model.ProductPrice">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Image Url</label>
                            <input type="text" class="form-control" value="@Model.ProductImageUrl">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Status: @Model.ProductStatus</label>
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Description</label>
                            <textarea class="form-control">@Model.ProductDescription</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


