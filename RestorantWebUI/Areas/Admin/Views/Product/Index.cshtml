@model List<ResultProductWithCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Product List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can view, edit, delete or add new product from here.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Name</th>
									<th scope="col">Category</th>
									<th scope="col">Price</th>
									<th scope="col">Status</th>
									<th scope="col">Operations</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ProductId</td>
										<td>@item.ProductName</td>
										<td>@item.ProductCategoryName</td>
										<td>@item.ProductPrice</td>
										<td>@item.ProductStatus</td>
										<td>
											<a href="/Admin/Product/Update/@item.ProductId" class="btn btn-outline-warning">Update</a>
											<a href="/Admin/Product/Delete/@item.ProductId" class="btn btn-outline-danger">Delete</a>
											<a href="/Admin/Product/Details/@item.ProductId" class="btn btn-outline-dark">Details</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<br />
						<a href="/Admin/Product/Create" class="btn btn-outline-info">Add Product</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


