@model CreateProductDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Product Process</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Add New Product</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Name</label>
                                <input type="text" class="form-control" asp-for="ProductName">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBrand">Category</label>
                                @Html.DropDownListFor(m => m.ProductCategoryId, (List<SelectListItem>)ViewBag.CategoryValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Price</label>
                                <input type="text" class="form-control" asp-for="ProductPrice">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Image url</label>
                                <input type="text" class="form-control" asp-for="ProductImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Description</label>
                                <textarea class="form-control" asp-for="ProductDescription"></textarea>
                            </div>
                            <input type="hidden" value="true" asp-for="ProductStatus" />
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Add Product</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



