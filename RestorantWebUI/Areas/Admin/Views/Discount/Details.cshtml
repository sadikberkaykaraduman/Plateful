@model ResultDiscountDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Discount Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Discount Detail</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="categoryname">Title</label>
                            <input type="text" class="form-control" value="@Model.DiscountTitle">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Amount</label>
                            <input type="text" class="form-control" value="@Model.DiscountAmount">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Image Url</label>
                            <input type="text" class="form-control" value="@Model.DiscountImageUrl">
                        </div>
                        <div class="form-group">
                            <label for="categoryname">Description</label>
                            <textarea class="form-control">@Model.DiscountDescription</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

