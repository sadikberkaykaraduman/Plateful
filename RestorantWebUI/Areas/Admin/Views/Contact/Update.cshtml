@model UpdateContactDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Contact Process</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-sub">
                            <div class="card-title">Update Contact</div>
                        </div>
                    </div>
                    <form method="post">
                        <div class="card-body">
                            <input type="hidden" asp-for="@Model.ContactId" />
                            <div class="form-group">
                                <label for="categoryname">Location</label>
                                <input type="text" class="form-control" asp-for="@Model.ContactLocation">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Phone</label>
                                <input type="text" class="form-control" asp-for="ContactPhone">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Mail</label>
                                <input type="text" class="form-control" asp-for="ContactMail">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Footer Description</label>
                                <textarea class="form-control" asp-for="@Model.FooterDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update Contact</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>








