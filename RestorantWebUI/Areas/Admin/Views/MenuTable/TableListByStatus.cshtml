@model List<ResultMenuTableDto>

@{
    ViewData["Title"] = "TableListByStatus";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    string color = "";
    string status = "";
}


<style>
    .widgettrue {
        width: 200px;
        height: 100px;
        background-color: #2ecc71; /* Yeşil arka plan */
        display: flex;
        align-items: center;
        border-radius: 10px;
        color: white;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .widgetfalse {
        width: 200px;
        height: 100px;
        background-color: palevioletred; /* Kırmızı arka plan */
        display: flex;
        align-items: center;
        border-radius: 10px;
        color: white;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .widget-icon {
        width: 40px;
        height: 40px;
        background-color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 10px;
    }

        .widget-icon i {
            font-size: 24px;
            color: #2ecc71;
        }

    .widget-text {
        margin-left: 20px;
    }

        .widget-text h3 {
            margin: 0;
            font-size: 18px;
        }

        .widget-text p {
            margin: 0;
            font-size: 14px;
        }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="content">
    <div class="container-fluid">
        <div class="row px-xl-5" style="margin-right:10px">
        
            @foreach (var item in Model)
            {
                if (item.MenuTableStatus == false)
                {
                    color = "widgettrue";
                    status = "Table Empty";
                }
                if (item.MenuTableStatus == true)
                {
                    color = "widgetfalse";
                    status = "Table Full";
                }

                <div class="col-md-3 mb-4">
                    <div class="@color">
                        @if (item.MenuTableStatus == true)
                        {
                            <div class="widget-icon">
                                <i class="fa-solid fa-cash-register"></i>
                            </div>

                        }
                        else
                        {
                            <div class="widget-icon">
                                <i class="fas fa-chair"></i>
                            </div>

                        }
                        <div class="widget-text">
                            <h3>@item.MenuTableName</h3>
                            <p>@status</p>
                        </div>
                    </div>
                </div>
                }
        </div>
    </div>
</div>

